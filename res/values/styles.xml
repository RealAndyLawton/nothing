<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>
    
    <style name="MediaButton">
        <item name="android:background">@drawable/media_button_background</item>
        <item name="android:minWidth">71dip</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">52dip</item>
    </style>

    <style name="MediaButton.Play">
        <item name="android:src">@drawable/ic_media_play</item>
    </style>

    <style name="MediaButton.Ffwd">
        <item name="android:src">@drawable/ic_media_ff</item>
    </style>

    <style name="MediaButton.Rew">
        <item name="android:src">@drawable/ic_media_rew</item>
    </style>

    <style name="MediaButton.Pause">
        <item name="android:src">@drawable/ic_media_pause</item>
    </style>

</resources>